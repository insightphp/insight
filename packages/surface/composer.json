{
    "name": "insightphp/surface",
    "type": "library",
    "license": "MIT",
    "description": "View abstraction layer for Inertia applications.",
    "authors": [
        {
            "name": "Peter Stovka",
            "email": "peter@peterstovka.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0",
        "inertiajs/inertia-laravel": "^0.6",
        "symfony/finder": "^6.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.22",
        "orchestra/testbench": "^7.7"
    },
    "autoload": {
        "psr-4": {
            "Insight\\Inertia\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Insight\\Inertia\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "extra": {
        "laravel": {
            "providers": [
                "SurfaceServiceProvider"
            ]
        }
    }
}
