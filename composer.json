{
    "name": "insightphp/insight",
    "type": "library",
    "license": "MIT",
    "description": "Insight is a Laravel package for building control panels.",
    "authors": [
        {
            "name": "Peter Stovka",
            "email": "peter@peterstovka.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/database": "^9.0",
        "illuminate/support": "^9.0",
        "inertiajs/inertia-laravel": "^0.6",
        "symfony/finder": "^6.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.21",
        "symplify/monorepo-builder": "^11.1"
    },
    "autoload": {
        "psr-4": {
            "Insight\\": "src/",
            "Insight\\Forms\\": "packages/forms/src/",
            "Insight\\Inertia\\": "packages/inertia-view-components/src/",
            "Insight\\Panels\\": "packages/panels/src/",
            "Insight\\Tables\\": "packages/tables/src/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Insight\\Panels\\Providers\\PanelsServiceProvider",
                "Insight\\Inertia\\Providers\\ViewComponentServiceProvider",
                "Insight\\Forms\\Providers\\FormsServiceProvider",
                "Insight\\Tables\\Providers\\TablesServiceProvider",
                "Insight\\Providers\\InsightServiceProvider"
            ]
        }
    },
    "replace": {
        "insightphp/forms": "0.1.2",
        "insightphp/inertia-view-components": "0.1.2",
        "insightphp/panels": "0.1.2",
        "insightphp/tables": "0.1.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
